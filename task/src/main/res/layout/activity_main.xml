<?xml version="1.0" encoding="UTF-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <com.fedukova.task.ui.CustomRelativeLayout
        android:id="@+id/go_to_rss"
        app:layout_heightPercent="30%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="25%"
        app:layout_widthPercent="90%"
        app:textValue="@string/rss">

    </com.fedukova.task.ui.CustomRelativeLayout>

    <com.fedukova.task.ui.CustomRelativeLayout
        android:id="@+id/go_to_restore"
        android:layout_alignStart="@+id/go_to_rss"
        android:layout_below="@+id/go_to_rss"
        app:layout_heightPercent="30%"
        app:layout_marginTopPercent="3%"
        app:layout_widthPercent="43%"
        app:textValue="@string/restore">

    </com.fedukova.task.ui.CustomRelativeLayout>

    <com.fedukova.task.ui.CustomRelativeLayout
        android:id="@+id/go_to_exit"
        android:layout_alignEnd="@+id/go_to_rss"
        android:layout_alignRight="@+id/go_to_rss"
        android:layout_alignTop="@+id/go_to_restore"
        app:layout_heightPercent="30%"
        app:layout_marginLeftPercent="5%"
        app:layout_widthPercent="43%"
        app:textValue="@string/exit">

    </com.fedukova.task.ui.CustomRelativeLayout>

</android.support.percent.PercentRelativeLayout>
