<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="8sp"
    android:layout_marginRight="8sp"
    android:layout_marginTop="8sp"
    android:layout_height="100sp"
    android:layout_width="match_parent"
    android:background="@drawable/list_item_shape"
    >
    <FrameLayout
        android:id="@+id/preview_layout"
        app:layout_heightPercent="80%"
        app:layout_widthPercent= "20%"
        app:layout_marginLeftPercent = "3%"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/preview_web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <View
            android:id="@+id/web_top_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <TextView
        android:layout_alignTop="@id/preview_layout"
        app:layout_marginLeftPercent = "30%"
        android:layout_height="wrap_content"
        app:layout_widthPercent="65%"
        android:id="@+id/title_text_view"
        android:textSize="24sp"
        android:lines="1"
        android:ellipsize="marquee"
        android:textColor="@android:color/black"

        />
    <TextView
        android:id="@+id/description_text_view"
        android:layout_below="@+id/title_text_view"
        android:layout_alignStart="@id/title_text_view"
        android:layout_alignLeft="@id/title_text_view"
        app:layout_marginTopPercent = "6%"
        android:lines="2"
        android:layout_height="wrap_content"
        app:layout_widthPercent="65%"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        />
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_selection"
        android:visibility="invisible" />
</android.support.percent.PercentRelativeLayout>
